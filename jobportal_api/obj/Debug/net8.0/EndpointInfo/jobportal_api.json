            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserCreateDTO": {
        "required": [
          "email",
          "gender",
          "name",
          "password",
          "role"
        ],
        "type": "object",
        "properties": {
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
