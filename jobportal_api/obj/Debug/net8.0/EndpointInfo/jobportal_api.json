            "format": "int32"
          },
          "jobId": {
            "minLength": 1,
            "type": "string"
          },
          "userId": {
            "minLength": 1,
            "type": "string"
          },
          "noticePeriod": {
            "type": "integer",
            "format": "int32"
          },
          "readyToRelocate": {
            "type": "string",
