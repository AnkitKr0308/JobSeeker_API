          },
          "currentLocation": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "JobCreateDTO": {
        "required": [
          "description",
          "role",
          "skillsRequired",
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "minLength": 1,
            "type": "string"
